mixin tile(tile)
  include ../tileSm/tileSm.pug
  include ../tileMd/tileMd.pug
  include ../tileLg/tileLg.pug
  - if (tile.size === 's')
    +tileSm(tile)
  - if (tile.size === 'm')
    +tileMd(tile)
  - if (tile.size === 'l')
    +tileLg(tile)
