mixin tileLg(data)
  .tile-lg 
    .tile-lg__image-container
      - const imgsrc = `%=static=%img/content/${data.image}@3x.png`
        img.tile-lg__image(src= imgsrc)
    .tile-lg__desc-container
      .tile-lg__overlay    
        - const style = `color: ${data.titleColor}`;
          .tile-lg__title(style= style )= data.title
          .tile-lg__whitespace
      p.tile-lg__desc= data.description
      .tile-lg__actions
        .tile-lg__dots
        .tile-lg__like
