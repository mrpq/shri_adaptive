mixin tile_s(tile)
  .tile.tile__sm
    .tile__content-container
      .tile__info.tile__info--sm
        h2.tile__header.tile__header--sm
          - const style = `color: ${tile.titleColor}`;
            a.tile__link(href="#" style= style)= tile.title
      .tile__actions-container
        .tile__dots
        .tile__like
    .tile__image-container
      - const imgsrc = `%=static=%img/content/${tile.image}@3x.png`
        img.tile__image(src= imgsrc)
      

mixin tile_m(tile)
  .tile.tile__md
    h2.tile__header.tile__header--md
      - const style = `color: ${tile.titleColor}`;
        a.tile__link(href="#" style= style)= tile.title
    .tile__image-container
      - const imgsrc = `%=static=%img/content/${tile.image}@3x.png`
        img.tile__image(src= imgsrc)
    .tile__footer
      .tile__description
      .tile__actions-container.tile__actions-container--md
        .tile__dots
        .tile__like

mixin tile_l(tile)
  .tile

mixin tile_sm(data)
  .tile.tile__sm

mixin tile_md(data)
  .tile.tile__md

mixin tile_lg(data)
